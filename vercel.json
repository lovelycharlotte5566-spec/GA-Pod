{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/messages/(.*)",
      "dest": "/api/messages/$1"
    },
    {
      "src": "/api/messages",
      "dest": "/api/messages.js"
    },
    {
      "src": "/api/cleanup",
      "dest": "/api/cleanup.js"
    },
    {
      "src": "/(.*\\.(html|css|js|jpg|png|gif|svg|ico))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
